{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es2016",
    "module": "esnext",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "outDir": "lib",
    "declarationDir": ".",
    "declaration": true,
    "lib": ["es6", "DOM"]
  },
  "include": ["src/index.ts"],
  "exclude": ["lib"]
}
